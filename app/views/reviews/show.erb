<h3>Your Reviews</h3>
<% @count =0 %>

<% @reviews.each do |review| %>
<table class=" table table-bordered table-condensed table-striped">
  <caption><b>Listing Reviews for Movie</b></caption>
  <tr>
  	<td><b>Movie:</b><%= @movies[@count].name %></td>
  </tr>
  <tr>
  	<td><b>Rating:</b><%= review.rating%></td>
  </tr>
  <tr>
  	<td><b>Review:</b><%= review.review%></td>
  </tr>
  <tr>
  	<td>
  		<%= link_to "edit", :controller => "reviews", :action => "edit", :id => review.id %>
		<%= link_to "destroy", :controller => "reviews", :action => "destroy", :id => review.id %>
        <div class="btn btn-inverse">
          <%= link_to "Edit", :controller => "reviews", :action => "edit", :id => review.id %>
        </div>
        <div class="btn btn-inverse">
          <%= link_to 'Destroy', review, :confirm => 'Are you sure?',:method => :delete %></td></tr>    
        </div>      
  	</td>
  </tr>
</table>
<% @count = @count + 1 %>
<% end %>