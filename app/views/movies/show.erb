<table class=" table table-bordered table-condensed table-striped">
  <caption><b>Listing Reviews for Movie</b></caption>
<!--   <tr><td><%= image_tag @movie.movie_url(:thumb) if @movie.movie? %></td></tr>
 -->  
  <tr>
    <!--<%= image_tag @movie.movie_url(:thumb) if @movie.movie? %>-->
      <td><%= image_tag @movie.poster_url %>
        <%= @movie.movie %></td></tr>
    <tr><td></td><b>Name: </b><%= @movie.name %></td>
  </tr>
  <tr>
    <td>
        <b>Overall Movie rating: </b>
        <% if @average_movie_rating.nil? %>
          <b>Not enough ratings received</b>
        <% else %>
          <%= @average_movie_rating %>
        <% end %>
    </td>
  </tr>
  <tr><td><b>Release Date: </b><%= @movie.movie_au_release_date %></td></tr>
  <tr><td><b>Actors: </b><%= @movie.movie_cast %></td></tr>
  <tr><td><b>Tagline: </b><%= @movie.movie_tagline %></td></tr>
  <tr><td><b>TMDB Rating: </b><%= @movie.movie_average_rating %></td></tr>
  <tr><td><b>Description: </b><%= @movie.movie_description %></td></tr>
  </tr>
  </table>

<div>
  
</div>

<% count = 0 %>
<% @reviews.each do |post| %>
<table class="table table-bordered table-condensed table-striped">
  
  <tr><th>Name</th></tr>
  <tr><td><%= @users[count].username %></td></tr>
  <tr><th>Review</th></tr>
  <tr><td><%= post.review %></td></tr>
  <tr><th>Rating</th></tr>
  <tr><td><%= post.rating %></td></tr>
    <% if user_signed_in? %>
    <% if @users[count].email == current_user.email %>
      <tr><td>
        <div class="btn btn-inverse">
          <%= link_to "Edit", :controller => "reviews", :action => "edit", :id => post.id %>
        </div>
        <div class="btn btn-inverse">
          <%= link_to 'Destroy', post, :confirm => 'Are you sure?',:method => :delete %></td></tr>    
        </div>      
    <% end %>
  <% end %>
   <% count = count + 1 %>
<% end %>

</table>
<div class="btn btn-inverse">
<%= link_to "Add your Review", :controller => "reviews", :action => "new",:movie => @movie.id  %>
</div>
