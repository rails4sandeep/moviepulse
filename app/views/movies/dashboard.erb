<table>
<tr><th>Top Rated Now Running</th></tr>
<%= paginate @movies %>
<table class="table table-bordered table-condensed table-striped">	
	  <% @movies.each do |post| %>
	      <tr>
	      	<% if !post.thumb_url.nil? %>
            <td><%= image_tag post.thumb_url %></td>
            <% else %>
            <td><b>No image available</b></td>
            <% end %>
	        <td><%= link_to "#{post.name}", post %></td>
	      </tr>
	  <% end %>
</table>
</table>

