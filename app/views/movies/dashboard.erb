<table>
<tr><th>Top Rated Now Running</th></tr>
<%= paginate @movies %>
<table class="table table-bordered table-condensed table-striped">	
	  <% @movies.each do |post| %>
	      <tr>
	      	<td><%= image_tag post.movie_url(:thumb) if post.movie? %></td>
	        <td><%= post.name %></td>
	        <td><%= link_to '', post,:class => 'icon-arrow-right'%></td>
	      </tr>
	  <% end %>
</table>
</table>

