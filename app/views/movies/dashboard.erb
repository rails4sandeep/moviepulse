<%
  title 'Dashboard: What Australia is watching'
%>

<div class="span12">

<div class="span12">
<div class="row-fluid">
<div class="span6">
<table>
<tr><th>Now Playing Australia</th></tr>
<table class="table table-condensed">
	<% cache('now_playing_au',:expires_in => 6.hour) do %>			
	<% @movies_now_playing_au.each do |post| %>
	      <tr>
	        <td><%= link_to "#{post[:name]}", controller: "movies", action: "create_from_tmdb", id: post[:tmdb_id] %></td>
	      </tr>
	  <% end %>
	  <% end %>
</table>
</table>
</div>

