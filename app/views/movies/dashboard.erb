<div class="span6">
<table>
<tr><th>Top Rated Now Running</th></tr>
<% cache('top_rated_now_running',:expires_in => 6.hour) do %>				
<!--%= paginate @movies %-->
	<table class="table table-condensed">
	<tr>		
	  <% @movies.each do |post| %>
	  	<% if post.thumb_url.empty? %>
	  	<td><%= link_to "#{post.name}", post %></td>
	  	<% else %>	
	  	<td><%= link_to image_tag(post.thumb_url), post %></td>
	  	<% end %>
