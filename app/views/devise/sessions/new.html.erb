<%
  title 'Sign In: Sign in to continue'
%>
<h3 align="center">Sign in</h3>
<style type="text/css">
body { 
    //background-image: url('https://s3-ap-southeast-2.amazonaws.com/moviepulse/background/background.jpg'); 
    background-image: url(<%= image_path 'gradient-bubbles.jpg' %>);
    background-repeat: no-repeat;
    //background-position: center;
} 
</style>
<div class="form-signin">
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
<table align="center">
  <tr>
    <td><%= f.label :email %></td>
    <td><%= f.email_field :email, :autofocus => true %></td>
  </tr>
  <tr>
    <td><%= f.label :password %></td>
    <td><%= f.password_field :password %></td>
  </tr>
  <tr>
    <td>
      <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me %> <%= f.label :remember_me %>
      <% end %>
    </td>
  </tr>
  <tr>
    <td><%= f.submit "Sign in",:class => "btn btn-large btn-primary" %></td>
  </tr>
</table>
<% end %>
</div>
<table align="center">
  <tr>
    <td>
      <%= render "devise/shared/links" %>
    </td>
  </tr>
</table>

