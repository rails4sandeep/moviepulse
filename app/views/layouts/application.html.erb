        <%= link_to "Privacy" %>
        <%= link_to "Credits",controller: "/credits",action: "index" %>
        @2013 Movie Pulse
    </footer> 
      </div>
    </div>
    <%= render 'layouts/ga' if Rails.env.production? %>
  </body>
</html>