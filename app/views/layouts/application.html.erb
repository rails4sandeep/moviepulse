      body { 
            //background: #2a333c;
          }
    </style>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body>
   
    <header class="navbar navbar-fixed-top navbar-inverse">
      <nav class="navbar-inner">
        <div class="container">
          <%= render 'layouts/navigation' %>
        </div>
      </nav>
    </header>
    <!-- Part 1: Wrap all page content here -->
    <div id="wrap">
    <div id="main" role="main">
      <div class="container-fluid">
        <div class="content">
           <div class="row">
            <div class="span10">
              <%= render 'layouts/messages' %>
              <%= yield %>
            </div>
            <div class="span2">
              <!--<%= google_adsense_include_tag client: 'ca-pub-2003857859925620', slot: '7152347448', width: '160', height: '600' %>
